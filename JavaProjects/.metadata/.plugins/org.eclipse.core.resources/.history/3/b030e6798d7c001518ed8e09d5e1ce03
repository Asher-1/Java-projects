	private void init() {
		//设置菜单
		menuBar =new JMenuBar();
		menu1 =new JMenu("注解（E）");
		menu2 =new JMenu("截取");
		menu3 =new JMenu("帮助（H）");
		menu4 =new JMenu("退出（F）");
		openItem = new JMenuItem("打开图片");
		editItem = new JMenuItem("编辑");
		storeItem = new JMenuItem("保存");
		menu1.add(openItem);
		menu1.add(editItem);
		menu1.add(storeItem);
		menuBar.add(menu1);
		menuBar.add(menu2);
		menuBar.add(menu3);
		menuBar.add(menu4);
		setJMenuBar(menuBar);
		//建立数表
